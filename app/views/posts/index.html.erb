<div class="blog--section bg-blog">
  <h1 class="default-font heading-text mdl-typography--text-center mdl-color-text--white">Blog</h1>
</div>
<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--12-col">
    <div class="read--me">
        <% @posts.each do |post| %>
          <%= link_to post_path(post.id) do %>
            <h3><%= post.title.titleize %></h3>
          <% end %>
          <span class="date"><%= post.created_at.strftime("%B %d, %Y")%></span><br>
          <p class="mdl-typography--body-2 post-body"><%= post.body %></p>
        <% end %>
    </div>
  </div>
</div>
