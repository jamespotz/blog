<script type="text/javascript">
  var nav = $('#nav');
    $(window).scroll(function(){
      if( $(this).scrollTop() > 150 ){
        nav.addClass("fadeInDown animated nav-scrolled");
      }else if( $(this).scrollTop() < 1 ) {
        nav.removeClass("fadeInDown nav-scrolled");
      }
    });

    function scroll_to(element){
         $('html,body').animate({ scrollTop: $(element).offset().top }, { duration: 1000, easing: 'swing'});
    }
    function resetAllScroll(){
      $("*").animate({ scrollTop: 0}, { duration: 1200, easing: 'swing'});
    }
    $('.scroll').click(function(e){
      e.preventDefault();
      var element = $(this).attr('href');
      if(element === '#top'){
        resetAllScroll();
      }else{
        scroll_to(element);
      }
    })
</script>
