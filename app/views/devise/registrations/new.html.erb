<div class="login--section">
  <div class="read--me">
    <h2>Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell--12-col">
        <%= f.input :email, input_html: { class: 'mdl-textfield__input' }, label_html: { class: "mdl-textfield__label mdl-color-text--grey-500" }, required: false, autofocus: true %>
      </div>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell--12-col">
        <%= f.input :password,  input_html: { class: 'mdl-textfield__input' }, label_html: { class: "mdl-textfield__label mdl-color-text--grey-500" },required: false %>
      </div>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell--12-col">
        <%= f.input :password_confirmation,  input_html: { class: 'mdl-textfield__input' }, label_html: { class: "mdl-textfield__label mdl-color-text--grey-500" }, required: false %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-ripple--center" %>
      </div>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>
  </div>
</div>
